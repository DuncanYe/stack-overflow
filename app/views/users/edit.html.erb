<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">

        <div class="sidebar-block text-center">
          <%= form_for @user do |f| %>

            <h3>修改使用者資訊</h3>
              
            <div class="col-sm-12 no-padding margin-top text-center">
              <div class="input1_wrapper">
                <label><%= f.label :name, "姓名:" %></label>
                <div class="input2_inner">
                  <%= f.text_field :name %>
                </div>
              </div>
            </div>

            <div class="clearfix"></div>
            <div class="col-sm-12 no-padding margin-top text-center">
              <div class="input1_wrapper">
                <label><%= f.label :company, "公司:" %></label>
                <div class="input2_inner">
                  <%= f.text_field :company, class: "input" %>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12 no-padding margin-top text-center">
              <div class="input1_wrapper">
                <label><%= f.label :title, "職稱:" %></label>
                <div class="input1_inner">
                  <%= f.text_field :title, class: "input"  %>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12 no-padding margin-top text-center">
              <div class="input1_wrapper">
                <label><%= f.label :website, "個人網站連結:" %></label>
                <div class="input1_inner">
                  <%= f.text_field :website, class: "input"  %>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12 no-padding margin-top text-center">
              <div class="input1_wrapper">
                <label><%= f.label :twitter, "Twitter 連結:" %></label>
                <div class="input1_inner">
                  <%= f.text_field :twitter, class: "input"  %>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12 no-padding margin-top text-center">
              <div class="input1_wrapper">
                <label><%= f.label :github, "GitHub 連結:" %></label>
                <div class="input1_inner">
                  <%= f.text_field :github, class: "input"  %>
                </div>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12 no-padding margin-top text-center" style="margin-top:30px;">
              <%= f.submit '資訊輸入', class: "btn btn-primary", style: 'width:30%;' %>
            </div>
            <div class="clearfix"></div>
          <% end %>
        </div>

        <div class="clearfix"></div>
        <div class="margin-top"></div>
      </div>
    </div>
  </div>
</div>
