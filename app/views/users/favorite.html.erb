<div class="container">
  <div class="row">
    <table class="table table-hover bg-light">
      <tbody>
        <% @favorited_posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= link_to post.content, post_path(post) %></td>
            <td>
              <%= render partial: "shared/favorite_button", locals: { post: post } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
