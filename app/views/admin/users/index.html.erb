<div class="container">
  <div class="row">
    <%= render partial: "admin/shared/navtab" %>
  </div>
  <div class="row">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Intro</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= truncate(user.intro, length: 100) %></td>
            <td>
              <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure??" }, class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto">
      <%= paginate @users, theme: "twitter-bootstrap-4" %>
    </div>
  </div>
</div>